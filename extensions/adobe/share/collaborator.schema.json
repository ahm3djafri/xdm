  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://ns.adobe.com/collaboration/collaborator",
  "title": "Collaborator",
  "type": "object",
  "meta:abstract": false,
  "meta:extensible": true,
  "additionalProperties": false,
  "meta:extends": ["https://ns.adobe.com/xdm/context/person"],
  "description": "A collaborator on a resource",
  "definitions": {
    "collaborator": {
      "properties": {
        "collaborator:user": {
          "oneOf": [
            {
              "$ref": "https://ns.adobe.com/adobecloudplatform/ims/user",
              "title": "IMS User",
              "description": "The unique identifier of the Collaborator"
            },
            {
              "$ref": "https://ns.adobe.com/xdm/context/emailaddress",
              "title": "Collaborator Email"
            }
          ]
        },
        "collaborator:role": {
          "$ref": "#/definitions/role",
          "title": "Privileges granted or denied to the collaborator"
        }
      }
    },
    "role": {
      "description": "Privileges granted or denied to the principal",
      "type": "array",
      "items": {
        "$ref": "https://ns.adobe.com/xdm/external/repo/accesscontrolentry#/definitions/privilege"
      }
    },
    "editor": {
      "$ref": "#/definitions/role",
      "const": ["ack", "read","write","modify","delete"]
    }
  },
  "required": ["collaborator:user", "collaborator:role"],
  "allOf": [
    {
      "$ref": "#/definitions/collaborator"
    },
    {
      "$ref": "#/definitions/role"
    },
    {
      "$ref": "https://ns.adobe.com/xdm/context/person#/definitions/person"
    },
    {
      "$ref":
        "https://ns.adobe.com/adobecloudplatform/ims/user#/definitions/user"
    }
  ]
}

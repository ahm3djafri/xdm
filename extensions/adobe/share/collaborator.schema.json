  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://ns.adobe.com/collaboration/collaborator",
  "title": "Collaborator",
  "type": "object",
  "meta:extensible": true,
  "description": "A collaborator on a resource",
  "definitions": {
    "collaborator": {
      "properties": {
        "xdm:name": {
          "title": "Collaborator name",
          "$ref": "https://ns.adobe.com/xdm/context/person-name",
          "description": "The collaborator's name"
        },
        "repo:id": {
          "type": "string",
          "meta:immutable": true,
          "meta:usereditable": false,
          "description":
            "A unique identifier to reference the asset in a content repository.",
          "examples": ["urn:aaid:sc:US:6dc33479-13ca-4b19-b25d-c805eff8a69e"]
        },
        "collaborator:user": {
          "$ref": "https://ns.adobe.com/xdm/common/principal",
          "title": "Principal who has been given ACLs",
          "description": "The unique identifier of the Collaborator"
        },
        "collaborator:role": {
          "$ref": "#/definitions/role",
          "title": "A role given to a collaborator"
        }
      }
    },
    "role": {
      "description": "Role a collaborator can take",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "meta:enum": {
              "editor": "A collaborator having read/write/delete privileges",
              "viewer": "A collaborator having read privileges"
            }
          },
          {
            "$ref":
              "#/definitions/privileges"
          }
        ]
      }
    },
    "privileges": {
      "type": "array",
      "items": {
        "$ref": "https://ns.adobe.com/xdm/external/repo/accesscontrolentry#/definitions/privilege"
      }
    },
    "editor": {
      "description": "An editor role defined by a list of ACLs",
      "allOf": [
        {
          "$ref":
            "#/definitions/privileges"
        },
        {
          "const": ["ack", "modify", "delete"]
        }
      ]
    },
    "viewer": {
      "description": "A viewer role defined by a list of ACLs",
      "allOf": [
        {
          "$ref":
            "https://ns.adobe.com/xdm/external/repo/accesscontrolentry#/definitions/repo:privileges"
        },
        {
          "const": ["ack", "read"]
        }
      ]
    }
  },
  "required": ["repo:id", "collaborator:user", "collaborator:role"],
  "allOf": [
    {
      "$ref": "#/definitions/collaborator"
    }
  ]
}
